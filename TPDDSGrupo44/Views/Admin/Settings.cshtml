@model TPDDSGrupo44.DataModels.Configuracion

@{
    ViewBag.Title = "Configuración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configuración</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group col-md-6">
            <label class="control-label col-md-4" >Duración máxima de la búsqueda (segundos)</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.duracionMaximaBusquedas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.duracionMaximaBusquedas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label class="control-label col-md-4">Generar logs</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.generarLog, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.generarLog, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}